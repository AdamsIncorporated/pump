{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "cargo",
      "args": ["build", "--verbose"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      }
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "start firefox.exe --remote-debugging-port=9222; npm start",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": ["$eslint-stylish"]
    }
  ]
}
